/* Trackball scroll configuration for crosses left */

#include "trackball_base.dtsi"

/* Create input listener for PMW3610 trackball device */
trackball_scroll_listener: trackball_scroll_listener {
  compatible = "zmk,input-listener";
  status = "okay";
  device = <&pixart_pmw3610_0>;  /* Reference first PMW3610 device */
  warp {
    layers = <MOTION>;
    input-processors = <&zip_scroll_scaler 2 1>;
  };
  precision {
    layers = <FKEYS>;
    input-processors = <&zip_scroll_scaler 1 2>;
  };
};

/* Alias mouse scroll listener to our custom listener */
&msc_input_listener = &trackball_scroll_listener;

/* Disable movement listener - not used on left side */
&mmv_input_listener {
  status = "disabled";
};